<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_client_background"
    tools:context=".TrainerMyClients">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="163dp"
        android:background="@color/transparent"

        app:srcCompat="@drawable/my_client_banner" />

    <Spinner
        android:id="@+id/spinnerOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="18dp"

        android:background="@drawable/option_button"
        android:spinnerMode="dialog"
        app:layout_constraintVertical_bias="0.0">

    </Spinner>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/myClientRecyclerView"
        android:layout_width="370dp"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"

        android:scrollbars="vertical"
        android:layout_marginStart="21dp"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="21dp"
        android:padding="10dp"
        android:paddingBottom="10dp" />

</RelativeLayout>