<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_client_background"
    tools:context=".TrainerMyClients">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="163dp"
        android:background="@color/transparent"

        app:srcCompat="@drawable/my_client_banner" />

    <ImageButton
        android:id="@+id/trainerOptionButton"
        android:layout_width="90dp"
        android:layout_height="90dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"

        android:layout_marginEnd="18dp"
        android:background="@drawable/option_button"


        app:layout_constraintVertical_bias="0.0">

    </ImageButton>



    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/myClientRecyclerView"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerInParent="true"

        android:layout_marginTop="70dp"
        android:background="@color/transparent"
        android:scrollbars="vertical" />

</RelativeLayout>